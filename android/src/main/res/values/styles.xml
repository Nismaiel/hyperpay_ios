<?xml version="1.0" encoding="utf-8"?>
<resources>

   

    <!-- EditText Style -->
    <style name="NewCheckoutTheme.EditText" parent="Checkout.EditText">
        <item name="android:textColor">#FF00004E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#FF00004E</item>
    </style>

    <!-- Custom style for Helper TextView -->
    <style name="NewCheckoutTheme.HelperTextView" parent="Checkout.TextView">
        <item name="android:textColor">#FF00004E</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewCheckoutTheme.Button" parent="Checkout.Button.Light">
        <item name="android:background">@color/buttonBackgroundColor</item>
        <item name="android:text">Save Card</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF00004E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>

    </style>

 

    <!--    DEFAULT COLORS YOU CAN OVERRIDE IN YOUR APP-->
    <color name="checkoutProgressBarStyle">#214282</color>
    <color name="headerBackground">#214282</color>
    <color name="cancelButtonTintColor">#FFFFFF</color>
    <color name="listMarkTintColor">#214282</color>
    <color name="cameraTintColor">#214282</color>
    <color name="checkboxButtonTintColor">#214282</color>
    <color name="buttonBackgroundColor">#FF00BF00</color>
    <color name="checkout_color_accent">#FF00004E</color>
</resources>
